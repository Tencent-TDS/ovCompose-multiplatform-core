<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movable_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">
  <TextView
      android:id="@+id/textView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/movable_panel_text"
      android:textAlignment="center"
      android:textColor="@android:color/black"
      android:textSize="80sp" />
  <Switch
      android:id="@+id/sys_mov_switch"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/system_move_switch_text" />
  <Switch
      android:id="@+id/scale_in_z_switch"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/scale_z_switch_text" />
  <Switch
      android:id="@+id/anchorable_switch"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/anchorable_switch_text" />
  <Switch
      android:id="@+id/parent_switch"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/parent_switch_text" />
  <TextView
      android:id="@+id/planeType_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/plane_type"
      android:textSize="20sp"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <CheckBox
        android:id="@+id/planetype_any_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:checked="true"
        android:text="@string/any" />
    <CheckBox
        android:id="@+id/planetype_vertical_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/vertical" />
    <CheckBox
        android:id="@+id/planetype_horizontal_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/horizontal" />
  </LinearLayout>
  <TextView
      android:id="@+id/PlaneSemantic_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/plane_semantic"
      android:textSize="20sp" />
  <TableLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <CheckBox
          android:id="@+id/planesemantic_any_checkbox"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:checked="true"
          android:text="@string/any" />
      <CheckBox
          android:id="@+id/planesemantic_wall_checkbox"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/wall" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
      <CheckBox
          android:id="@+id/planesemantic_floor_checkbox"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/floor" />
      <CheckBox
          android:id="@+id/planesemantic_table_checkbox"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/table" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <CheckBox
          android:id="@+id/planesemantic_ceiling_checkbox"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/ceiling" />
    </TableRow>
  </TableLayout>
</LinearLayout>
