<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_entity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">
  <TextView
      android:id="@+id/textView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/panel_entity_text"
      android:textAlignment="center"
      android:textColor="@android:color/black"
      android:textSize="80sp" />
  <Switch
      android:id="@+id/main_panel_switch"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/main_panel_switch_text" />
  <Switch
      android:id="@+id/activity_panel_switch"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/activity_panel_switch_text" />
  <Switch
      android:id="@+id/panel_entity_switch"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/panel_entity_switch_text" />
</LinearLayout>